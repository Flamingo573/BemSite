.contact-field__pencil-line
  display block
  border 1px solid transparent

  &::after
    display none
    position: absolute
    content ''
    bottom 3px
    right 33px
    width 15px
    height 15px
    background url('pencil.png') no-repeat 50% 50%

  &::before
    display block
    position: absolute
    content 'qwer'
    font-size 12px
    color #999999
    bottom 3px
    left 0
