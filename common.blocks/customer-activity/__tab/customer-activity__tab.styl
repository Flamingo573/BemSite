.customer-activity__tab
  display inline-block
  padding 0 12px
  height 40px
  font-size 14px
  font-weight bold
  color #303841
  cursor pointer

  &_selected
    position relative

    &::after
      display block
      content ''
      position absolute
      left 0
      bottom 0
      width 100%
      height 6px
      background #442a9d
      border-radius 3px
