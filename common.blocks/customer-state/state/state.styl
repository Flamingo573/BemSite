.state
  display flex
  background #fff
  border-radius 6px
  overflow hidden

  &__image
    width 34%
    height 127px

    ~/_orders &
      background #ffc12d url('state-orders.png') no-repeat 50% 50%


    ~/_progress &
      background #442a9d url('state-progress.png') no-repeat 50% 50%


  &__content
    flex-grow 1
    text-align center
    display flex
    flex-direction column
    justify-content center

  &__headline
    font-size 17px
    padding-bottom 15px

    ~/_orders &
      color #ffc12d

    ~/_progress &
      color #442a9d

  &__count
    color #4f4f4f
    font-size 37px
