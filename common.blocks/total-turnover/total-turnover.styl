.total-turnover
  box-sizing border-box
  max-width 405px
  width 33%
  height 270px
  background #fff url('background-total.svg') no-repeat 50% 130%
  background-size 120%
  padding 25px
  display flex
  flex-direction column
  align-items center
  border-radius 6px


  &__headline
    font-size 17px
    color #4f4f4f
    margin-bottom 20px

    ~/__sum
      font-size 44px
      color @color
